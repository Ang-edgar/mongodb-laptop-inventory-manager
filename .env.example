# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/laptop_inventory
# For production with authentication:
# MONGODB_URI=mongodb://username:password@mongodb:27017/laptop_inventory?authSource=admin
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/laptop_inventory

# Admin Backend Configuration
SECRET_KEY=admin-secret-key-change-me-in-production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
FLASK_ENV=development
PORT=5000
# For production: FLASK_ENV=production

# Guest Frontend Configuration
GUEST_SECRET_KEY=guest-secret-key-change-me-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# Admin API URL (for guest app)
ADMIN_API_URL=http://admin:5000/api
# For production with separate servers:
# ADMIN_API_URL=https://admin.yourdomain.com/api

# Security Notes:
# 1. Generate strong SECRET_KEY: openssl rand -hex 32
# 2. Generate strong JWT_SECRET: openssl rand -hex 32  
# 3. Use different values for SECRET_KEY and JWT_SECRET
# 4. Change default admin password immediately
# 5. Enable MongoDB authentication in production
# 6. Use HTTPS/TLS in production

